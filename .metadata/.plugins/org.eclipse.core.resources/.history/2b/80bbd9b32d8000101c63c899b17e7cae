//		Student st=(Student)session.get(Student.class, 104);
//		System.out.println(st);//null because no object is found in db
		
		
		//load
		Student st=(Student)session.load(Student.class, 102);
//		System.out.println(st);//noting to print because not 
		session.close();
	}
}
