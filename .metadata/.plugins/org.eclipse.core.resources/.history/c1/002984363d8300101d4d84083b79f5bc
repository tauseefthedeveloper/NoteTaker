	<script>
	$(document).ready(function(){
		$('#addForm').on('submit',function(event){
			event.preventDefault();
			let title=$('#title').val();
			let content=$('#content').val();
			if(title.trim()==="" && content.trim()===""){
				Swal.fire({
					title:"Please enter the details!",
					icon:"error",
					dragabble:true,
				})	
			}
		});
	})
	</script>
